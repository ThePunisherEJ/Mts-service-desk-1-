@page "/SupportClientsHome"
@inject HttpClient httpClient

@inherits ClientHomeBase

<h3>Client Home</h3>

@if (clients == null)
{
    <p><em>Loading...</em></p>
}
else
{
    
    <table class="table">
        <thead>
            
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Domain</th>
                <th>Status</th>
                <th><button style="float:right">NEW CLIENT</button></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var client in clients)
            {
            <tr>
                <td>@client.Id</td>
                <td>@client.Name</td>
                <td>@client.DomainName</td>
                <td>@client.StatusDescription</td>
                <td><button style="float:right">EDIT</button></td>





            </tr>
            }
        </tbody>
    </table>
}

