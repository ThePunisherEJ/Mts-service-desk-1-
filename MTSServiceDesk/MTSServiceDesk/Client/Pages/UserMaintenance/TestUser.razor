@page "/UserMaintenanceHome"
@inject HttpClient httpClient

<h3>Test User Maint</h3>

@if (allUsers == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Status</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var user in allUsers)
            {
            <tr>
                <td>@user.UserId</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.UserStatus</td>





            </tr>
            }
        </tbody>
    </table>
}

@code {

    private UserDetails[] allUsers;

    protected override async Task OnInitializedAsync()
    {
        allUsers = await httpClient.GetFromJsonAsync<UserDetails[]>("api/auth/get-all-users");

        //return base.OnInitializedAsync();
    }
}
